import java.util.Scanner;

public class Palindrom{
    public static void main(String[] args){
        Scanner stdIn = new Scanner(System.in);
        
        String quit = "";
        
        while (!quit.equalsIgnoreCase("q")){
            
            String phrase;
            String reversedPhrase = "";
            String replacedPhrase;
            
            System.out.printf("Enter in a word or phrase that is a palindrom\n");
            phrase = stdIn.nextLine();
            
            replacedPhrase = phrase.replaceAll("[^a-zA-Z]", "").toLowerCase();
            
            for(int i = replacedPhrase.length()-1; i >= 0; i--){
                reversedPhrase += replacedPhrase.charAt(i);
            }
            
            
            
            if (replacedPhrase.equalsIgnoreCase(reversedPhrase)){
                System.out.printf("The phrase: %s\nis a palindrom\n", phrase);
            }
            else{
                System.out.printf("The phrase: %s\nis not a palindrom\n", phrase);
            }
            
            //stdIn.nextLine();
            
            System.out.printf("Press q to quit or any other key to continue.\n");
            quit = stdIn.nextLine();
        }
        stdIn.close();
    }
}
