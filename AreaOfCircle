/**
 * Write a description of class AreaOfCircle here.
 *
 *This program will ask the user for the radius of the circle.
 *Then the program will calculate the area of a circle using that radius
 *
 * @author Jayden Clockston
 * @version 9/14/25
 */

import java.util.Scanner;

public class AreaOfCircle
{
    public static void main(String[] args)
    {
        Scanner stdIn = new Scanner(System.in);
       
        //variable section------------------------------
       
        final double PI = 3.14; // the digits for pi
        double radius; // radius of the circle
        double area; // area of the circle
       
        //end of variable section ----------------------
       
        System.out.println("what is the radius of the circle?"); //ask the user what the radius of the circle is
        radius = stdIn.nextDouble(); //take the input of the radius from the user
        area = PI * (radius * radius); // calculate the area
        System.out.println("You input " + radius + " as the radius, the area of the circle is " + area); // print the radius given and the area calculated
       
       
       
    }
}
