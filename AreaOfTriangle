import java.util.Scanner;

public class AreaOfTriangle
{
    public static void main(String[] args)
    {
        Scanner stdIn = new Scanner(System.in);
       
        //variable section------------------------------
       
        final double half = 0.5; // the digits for pi
        double base; // base of the triangle
        double height; // height of the triangle
        double area; // area of triangle
       
        //end of variable section ----------------------+
       
        System.out.println("what is the base of the triangle?"); //ask the user what the base of the triangle is
        base = stdIn.nextDouble(); //take the input of the base from the user
        
        System.out.println("what is the height of the triangle?"); //ask the user what height of the triangle
        height = stdIn.nextDouble(); //take the input of the height from the user
        
        area = half * base * height; // area of a triangle is equal to 1/2(base*height)
        System.out.println("the area of the triangle is " + area + " square inches"); //final print statement
       
       
       
    }
}
